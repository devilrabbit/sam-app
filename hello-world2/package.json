{
  "name": "hello_world",
  "version": "1.0.0",
  "description": "hello world sample for NodeJS",
  "main": "dist/index.js",
  "repository": "https://github.com/awslabs/aws-sam-cli/tree/develop/samcli/local/init/templates/cookiecutter-aws-sam-hello-nodejs",
  "author": "SAM CLI",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "base64url": "^3.0.1",
    "hashids": "^2.2.8",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "build": "npm run clean && mkdir ./dist && webpack --mode=production && cp ./package.json ./dist/package.json",
    "build:dev": "npm run clean && mkdir ./dist && webpack --mode=development && cp ./package.json ./dist/package.json",
    "start:local": "npm run build:dev && sam local start-api",
    "start:debug": "npm run build:dev && sam local start-api --debug-port 5858",
    "test": "jest",
    "clean": "rm -rf dist/"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.72",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/webpack": "^4.41.26",
    "aws-sam-webpack-plugin": "^0.9.0",
    "aws-sdk": "^2.853.0",
    "aws-sdk-mock": "^5.1.0",
    "axios-mock-server": "^0.19.1",
    "chai": "^4.2.0",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "mocha": "^8.2.1",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^3.9.9",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0",
    "webpack-preprocessor-loader": "^1.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
}
